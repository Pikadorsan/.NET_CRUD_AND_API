@page
@model SuperMegaProjekt.Pages.GroupList.CreateModel
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Add New Student</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Group.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Group.Name" class="form-control" type="text" placeholder="LastName" />
            </div>
            <span asp-validation-for="Group.Name" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success btn-sm">Back to List</a>
            </div>
        </div>
    </form>
</div>